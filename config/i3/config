# common apps keybinds
#bindsym Print exec scrot 'Cheese_%a-%d%b%y_%H.%M.png' -e 'xdg-open ~/$f'
bindsym $super+Shift+l exec i3lock -c 000000 
bindsym $super+Shift+o exec i3lock -c 000000  ; exec systemctl suspend
# -i ~/.lock.png

